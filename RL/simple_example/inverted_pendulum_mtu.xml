<mujoco model="inverted pendulum">
	<compiler inertiafromgeom="true"/>
	<default>
		<joint armature="0" damping="1" limited="true"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
		<site rgba=".9 .9 .9 1"/>
	</default>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.002" solver="Newton" iterations="1" ls_iterations="4"/>
	<size nstack="3000"/>
	<worldbody>
		<!--geom name="ground" type="plane" pos="0 0 0" /-->
		<geom name="rail" pos="0 0 0" quat="0.707 0 0.707 0" rgba="0.3 0.3 0.7 1" size="0.01 1" type="capsule"/>
		<site name="mtu1_s1" pos="-1 0 0"/>
		<site name="mtu2_s1" pos="1 0 0"/>
		<body name="cart" pos="0 0 0">
			<joint axis="1 0 0" limited="true" name="slider" pos="0 0 0" range="-0.3 0.3" type="slide" damping="1" />
			<geom name="cart" pos="0 0 0" quat="0.707 0 0.707 0" size="0.1 0.1" type="capsule"/>
			<site name="mtu1_s2" pos="-0.3 0 0"/>
			<site name="mtu2_s2" pos="0.3 0 0"/>
			<body name="pole" pos="0 0 0">
				<joint axis="0 1 0" name="hinge" pos="0 0 0" range="-90 90" type="hinge"/>
				<geom fromto="0 0 0 0.001 0 0.6" name="cpole" rgba="0 0.7 0.7 1" size="0.049 0.3" type="capsule"/>
				<!--                 <body name="pole2" pos="0.001 0 0.6"><joint name="hinge2" type="hinge" pos="0 0 0" axis="0 1 0"/><geom name="cpole2" type="capsule" fromto="0 0 0 0 0 0.6" size="0.05 0.3" rgba="0.7 0 0.7 1"/><site name="tip2" pos="0 0 .6"/></body>-->
			</body>
		</body>
	</worldbody>

	<biomtu>
		<spatial name="mtu_1" width=".02" tendon_slack_l="0.3" max_isometric_force="1000"
			max_contraction_velocity="10.0" optimal_fiber_length="0.3" 
			optimal_pennation_angle="0.052360" rgba=".95 .3 .3 1"
			virtual_mass="1">
			<site site="mtu1_s1"/>
			<site site="mtu1_s2"/>
		</spatial>

		<spatial name="mtu_2" width=".02" tendon_slack_l="0.3" max_isometric_force="1000"
			max_contraction_velocity="10.0" optimal_fiber_length="0.3" 
			optimal_pennation_angle="0.052360" rgba=".95 .3 .3 1"
			virtual_mass="1">
			<site site="mtu2_s1"/>
			<site site="mtu2_s2"/>
		</spatial>
	</biomtu>

	<tendon>
		<spatial name="tendon1" springlength="0.3" stiffness="0" limited="false" width=".02" rgba=".95 .3 .3 1">
			<site site="mtu1_s1"/>
			<site site="mtu1_s2"/>
		</spatial>

		<spatial name="tendon2" springlength="0.3" stiffness="0" limited="false" width=".02" rgba=".95 .3 .3 1">
			<site site="mtu2_s1"/>
			<site site="mtu2_s2"/>
		</spatial>

	</tendon>
</mujoco>
